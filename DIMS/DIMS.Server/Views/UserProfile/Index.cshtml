@model HIMS.Server.Models.Users.vUserProfilesListViewModel

@{
    ViewBag.Title = "User Profile Page";
}

<h2>User Profile CRUD Grid</h2>


<p>
    @Html.ActionLink("Register", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Id
            </th>
            <th>
                Full Name
            </th>
            <th>
                Direction
            </th>
            <th>
                Start
            </th>
            <th>
                Age
            </th>

            <th></th>


            @foreach (var item in Model.vUserProfiles)
            {
        <tr>
            <th scope="row">
                @Html.DisplayFor(modelItem => item.UserId)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <div>
                    @Html.ActionLink("Progress", "Progress", new { id = item.UserId }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Tasks", "Tasks", new { id = item.UserId }, new { @class = "btn btn-default" })
                </div>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "DeleteByEmail", new { email = item.Email }, new { @class = "btn btn-danger deleteUser" })
                </div>

            </td>
        </tr>
        }


        </thead>
    </table>

<div class="modal fade" id="delete-user-modal">
    <h2>Delete</h2>
    <div class="modal-dialog" id="delete-user-dialogContent">

        <h3>Are you sure you want to delete this user profile?</h3>
        <div>
            <h4>UserProfileViewModel</h4>
            <hr />
            @*<dl class="dl-horizontal">
                <dt>
                    @Html.DisplayFor(model => model.vUserProfiles.ToArray())
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserId)
                </dd>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.MobilePhone)
                </dt>

            </dl>*@

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>

    @section scripts
{
        <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
           $(".deleteUser").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#delete-user-dialogContent').html(data);
                    $('#delete-user-modal').modal('show');
                });
            });
        })
        </script>
}