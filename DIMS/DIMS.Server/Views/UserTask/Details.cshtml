@model DIMS.Server.Models.Tasks.VUserTaskViewModel

@{
    Layout = null;
}

<div class="modal-content">

    <div class="modal-header">
        <h2>@Html.DisplayFor(model => model.TaskName)</h2>
    </div>

    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>

            <dd>
                @{
                    var startDate = Model.StartDate.ToShortDateString();
                }
                @Html.DisplayFor(model => startDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DeadlineDate)
            </dt>

            <dd>
                @{
                    var deadlineDate = Model.DeadlineDate.ToShortDateString();
                }
                @Html.DisplayFor(model => deadlineDate)
            </dd>
        </dl>
    </div>

    @Html.Partial("ModalButtons", new ModalButtonViewModel { IsItDetails = true, Id = Model.UserId })
</div>
